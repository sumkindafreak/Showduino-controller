  FLAG_EMERGENCY_STOP = 1,
  FLAG_ESP32_CONNECTED = 2,
  FLAG_TEMPERATURE_WARNING = 3,
  FLAG_VOLTAGE_WARNING = 4,
  FLAG_RTC_ACTIVE = 5,
  FLAG_DMX_ACTIVE = 6,
  FLAG_SAFE_MODE = 7
};


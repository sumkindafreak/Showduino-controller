  playMP3Track(2, 5);
  for (int i = 0; i < 4; i++) {
    activateRelay(i, true);
    delay(500);
  }
  executeCustomEffect(10, 0, 0, 20, 0x00FF00, 50, 255, false, 10000);
  showduinoState.machineStarted = true;
}

